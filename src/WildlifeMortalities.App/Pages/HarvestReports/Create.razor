@page "/harvest-reports/create"
@using WildlifeMortalities.App.Data

<MudText Typo="Typo.h3" Class="mb-8">New Harvest Report</MudText>
<EditForm Model="@HarvestReport" OnValidSubmit="Update">
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudPaper Elevation="2" Class="pa-4">
                <MudAutocomplete T="int" Label="Client Id"></MudAutocomplete>
            </MudPaper>
        </MudItem>
    </MudGrid>
</EditForm>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = null!;
    List<HarvestReport> HarvestReports { get; set; } = new();
    public HarvestReport HarvestReport { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        HarvestReport = new HarvestReport();
        await base.OnInitializedAsync();
    }

    private void Update()
    {

    }
}