@namespace WildlifeMortalities.App.Features.MortalityReports
@inherits ReportTypeComponent<SelectMortalityReportTypeViewModel>

<EditForm EditContext="_context">
    <FluentValidationValidator Validator="new SelectMortalityReportTypeViewModelValidator()" />
    <MudSelect T="MortalityReportType" @bind-Value="ViewModel.MortalityReportType" For="@(() => ViewModel.MortalityReportType)" Label="Mortality Report Type">
        @foreach (MortalityReportType mortalityReportType in Enum.GetValues(typeof(MortalityReportType)))
        {
            <MudSelectItem Value="@mortalityReportType" T="MortalityReportType">@mortalityReportType</MudSelectItem>
        }
    </MudSelect>
</EditForm>
