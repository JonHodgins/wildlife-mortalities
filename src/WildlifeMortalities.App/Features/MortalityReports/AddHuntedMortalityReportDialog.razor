<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Add report
        </MudText>
    </TitleContent>
    <DialogContent>
        <EditForm EditContext="_context">
            <FluentValidationValidator/>
            <HuntedMortalityReportComponent @ref="_huntedMortalityReportComponent" MortalityReportType="ReportType" ViewModel="_vm"/>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" ButtonType="ButtonType.Button" OnClick="Add">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private EditContext _context = null!;

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    private HuntedMortalityReportComponent? _huntedMortalityReportComponent;
    private readonly HuntedMortalityReportViewModel _vm = new();

    [Parameter]
    public MortalityReportType ReportType { get; set; }

    protected override void OnInitialized()
    {
        _context = new EditContext(_vm);
        base.OnInitialized();
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Add()
    {
        if (_context.Validate())
        {
            MudDialog.Close(DialogResult.Ok(_vm));
        }
    }

}
