<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Edit report
        </MudText>
    </TitleContent>
    <DialogContent>
        <EditForm EditContext="_context">
            <HuntedMortalityReportComponent @ref="_huntedMortalityReportComponent" MortalityReportType="null" ViewModel="ViewModel"/>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" ButtonType="ButtonType.Button" OnClick="Edit">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private EditContext _context = null!;

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public HuntedMortalityReportViewModel ViewModel { get; set; } = null!;

    [Parameter]
    public MortalityReportType ReportType { get; set; }

    private HuntedMortalityReportComponent? _huntedMortalityReportComponent;

    protected override void OnInitialized()
    {
        _context = new EditContext(ViewModel);
        base.OnInitialized();
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Edit()
    {
        if (_context.Validate())
        {
            MudDialog.Close(DialogResult.Ok(ViewModel));
        }
    }

}
