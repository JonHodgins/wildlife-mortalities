
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Edit report
        </MudText>
    </TitleContent>
    <DialogContent>
        <HuntedMortalityReportComponent MortalityReportType="null" ViewModel="ViewModel" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" ButtonType="ButtonType.Button" OnClick="Edit">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public HuntedMortalityReportViewModel ViewModel { get; set; } = null!;

    [Parameter]
    public MortalityReportType ReportType { get; set; }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Edit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}
