
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Add mortality
        </MudText>
    </TitleContent>
    <DialogContent>
        <MortalityComponent @ref="_mortalityComponent" ReportType="ReportType" EditViewModel="null"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" ButtonType="ButtonType.Button" OnClick="Add">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    private MortalityComponent? _mortalityComponent;

    [Parameter]
    public MortalityReportType ReportType { get; set; }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Add()
    {
        MudDialog.Close(DialogResult.Ok(_mortalityComponent?.GetViewModel()));
    }
}
