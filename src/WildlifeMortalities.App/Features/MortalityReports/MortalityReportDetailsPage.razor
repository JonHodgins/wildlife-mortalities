@page "/mortality-reports/{id:int}"
@using WildlifeMortalities.Data.Entities.Reports.SingleMortality
@using WildlifeMortalities.Data.Entities.Reports.MultipleMortalities
@using WildlifeMortalities.App.Features.Shared.Mortalities

@if (_reportDetail is null)
{
    <MudAlert Severity="Severity.Error">Report not found.</MudAlert>
    return;
}
<PrintOrDownloadComponent ReportDetail="_reportDetail"/>
@switch (_reportDetail.report)
{
    case HumanWildlifeConflictMortalityReport report:
        <MudText Typo="Typo.h3" Class="mb-8">Human-wildlife conflict report</MudText>
        break;
    case IndividualHuntedMortalityReport report:
        <MudText Typo="Typo.h3" Class="mb-8">Individual hunt report</MudText>
        <IndividualHuntedMortalityReportDetailsComponent Report="@report"/>
        break;
    case OutfitterGuidedHuntReport report:
        <MudText Typo="Typo.h3" Class="mb-8">Outfitter guided hunt report</MudText>
        <OutfitterGuidedHuntReportDetailsComponent Report="@report"/>
        break;
    case SpecialGuidedHuntReport report:
        <MudText Typo="Typo.h3" Class="mb-8">Special guided hunt report</MudText>
        <SpecialGuidedHuntReportDetailsComponent Report="@report"/>
        break;
}
<MudGrid>
    @foreach (var item in _reportDetail.report.GetMortalities())
    {
        <MudItem sm="3" xs="6">
            <MortalityCardComponent MortalityViewModel="@(new MortalityViewModel(item, _reportDetail))"/>
        </MudItem>
    }
</MudGrid>
