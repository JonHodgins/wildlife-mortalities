@namespace WildlifeMortalities.App.Features.HarvestReports
@inherits ReportTypeComponent<SelectHarvestReportTypeViewModel>

<EditForm EditContext="_context">
    <FluentValidationValidator Validator="new SelectHarvestReportTypeViewModelValidator()" />
    <MudSelect T="HarvestReportType" @bind-Value="ViewModel.HarvestReportType" For="@(() => ViewModel.HarvestReportType)" Label="Harvest Report Type">
        @foreach (HarvestReportType harvestReportType in Enum.GetValues(typeof(HarvestReportType)))
        {
            <MudSelectItem Value="@harvestReportType" T="HarvestReportType">@harvestReportType</MudSelectItem>
        }
    </MudSelect>
</EditForm>
