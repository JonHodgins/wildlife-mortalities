@using WildlifeMortalities.App.Extensions
@using WildlifeMortalities.Data.Enums

@namespace WildlifeMortalities.App.Features.HarvestReports
@inherits ReportTypeComponent<SelectSpeciesViewModel>

<EditForm EditContext="_context">
    <FluentValidationValidator Validator="new SelectSpeciesViewModelValidator(ReportType)" />

    @if (ReportType == HarvestReportType.Trapping)
    {
        <MudSelect T="TrappedSpecies?" @bind-Value="ViewModel.TrappedSpecies" For="@(() => ViewModel.TrappedSpecies)" Label="Species">
            <MudSelectItem T="TrappedSpecies?" Value="null">Select an option</MudSelectItem>
            @foreach (TrappedSpecies species in Enum.GetValues(typeof(TrappedSpecies)))
            {
                if (species != TrappedSpecies.Uninitialized)
                {
                    <MudSelectItem Value="@species" T="TrappedSpecies?">@species.GetDisplayName()</MudSelectItem>
                }
            }
        </MudSelect>
    }
    else
    {
        <MudSelect T="HuntedSpecies?" @bind-Value="ViewModel.HuntedSpecies" For="@(() => ViewModel.HuntedSpecies)" Label="Species">
            <MudSelectItem T="HuntedSpecies?" Value="null">Select an option</MudSelectItem>
            @foreach (HuntedSpecies species in Enum.GetValues(typeof(HuntedSpecies)))
            {
                if (species != HuntedSpecies.Uninitialized)
                {
                    <MudSelectItem Value="@species" T="HuntedSpecies?">@species.GetDisplayName()</MudSelectItem>
                }
            }
        </MudSelect>
    }


</EditForm>



