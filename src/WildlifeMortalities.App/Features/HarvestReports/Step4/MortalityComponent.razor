@using WildlifeMortalities.Data.Enums

@namespace WildlifeMortalities.App.Features.HarvestReports
@inherits ReportTypeComponent<MortalityViewModel>

<EditForm EditContext="_context">
    <FluentValidationValidator Validator="new MortalityViewModelValidator()" />

    <BaseMortalityComponent ViewModel="_viewModel" />

    @switch (_viewModel)
    {
        case AmericanBlackBearMortalityViewModel vm:
            <AmericanBlackBearMortalityComponent ViewModel="vm" />
            break;
        case WoodBisonMortalityViewModel vm:
            <WoodBisonMortalityComponent ViewModel="vm" />
            break;
    }

    <MudButton OnClick="CreateInstance" />


</EditForm>


