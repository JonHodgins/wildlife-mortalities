@using WildlifeMortalities.Data.Enums

@namespace WildlifeMortalities.App.Features.HarvestReports
@inherits ReportTypeComponent<CreateMortalityViewModel>

<EditForm EditContext="_context">
    <FluentValidationValidator Validator="new CreateMortalityViewModelValidator()" />

    <BaseMortalityComponent ViewModel="_viewModel" />

    @switch (_viewModel)
    {
        case CreateAmericanBlackBearMortalityViewModel vm:
            <AmericanBlackBearMortalityComponent ViewModel="vm" />
            break;
        case CreateWoodBisonMortalityViewModel vm:
            <CreateWoodBisonMortalityComponent ViewModel="vm" />
            break;
    }

    <MudButton OnClick="CreateInstance" />


</EditForm>


