@using WildlifeMortalities.App.Features.Reports.Activities

<CascadingValue Value="MortalityReportType.Trapped" Name="@Constants.CascadingValues.MortalityReportType">
    @foreach (var activity in ViewModel.TrappedActivityViewModels)
    {
        <ActivityComponent ViewModel="activity" />
    }
</CascadingValue>


@code {
    [Parameter]
    [EditorRequired]
    public TrappedReportViewModel ViewModel { get; set; } = null!;

    [Parameter]
    public bool EditMode { get; set; } = false;

    protected override void OnInitialized()
    {
        ViewModel.TrappedActivityViewModels.Add(new TrappedActivityViewModel() { Comment = "blah" });
    }
}
