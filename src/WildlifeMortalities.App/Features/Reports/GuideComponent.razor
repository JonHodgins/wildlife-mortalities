@using WildlifeMortalities.Data.Entities.People;
<MudStack Row="true">
    <MudField Label="@Label" DisableUnderLine="true">@Guide</MudField>
    @if(Guide is not null)
    {
        <MudTooltip Text="View client">
            <MudIconButton Class="mt-2" Icon="@Icons.Material.Filled.Visibility" Color="Color.Info" Href="@Constants.Routes.GetClientOverviewPageLink(Guide.EnvClientId)" />
        </MudTooltip>
        <MudSpacer/>
    }
</MudStack>

@code {
    [Parameter]
    [EditorRequired]
    public string Label { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public Client? Guide { get; set; }
}
