@using WildlifeMortalities.App.Extensions
@using WildlifeMortalities.Data.Entities.Reports.MultipleMortalities
@using WildlifeMortalities.Shared.Extensions;
<MudItem xs="12" sm="4">
    <MudText Typo="Typo.h5">@Report.HumanReadableId</MudText>
    @if (Report.Result != Data.Enums.GuidedHuntResult.DidNotHunt)
    {
        <MudField Label="Hunting dates" DisableUnderLine="true">@Report.HuntStartDate?.ToString("D") <MudIcon Icon="@Icons.Material.Filled.ArrowForward" Size="Size.Small" /> @Report.HuntEndDate?.ToString("D")</MudField>
    }
    <MudStack Row="true">
        <MudField Label="Guide" DisableUnderLine="true">@Report.Guide</MudField>
        <MudTooltip Text="View client">
            <MudIconButton Class="mt-2" Icon="@Icons.Material.Filled.Visibility" Color="Color.Info" Href="@Constants.Routes.GetClientOverviewPageLink(Report.Guide.EnvPersonId)" />
        </MudTooltip>
        <MudSpacer />
    </MudStack>
    <MudField Label="Hunt result" DisableUnderLine="true">@Report.Result.GetDisplayName()</MudField>
</MudItem>

@code {

    [Parameter]
    [EditorRequired]
    public SpecialGuidedHuntReport Report { get; set; } = null!;

}
