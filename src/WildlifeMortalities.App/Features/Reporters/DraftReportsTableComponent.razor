@namespace WildlifeMortalities.App.Features.Reporters
@using WildlifeMortalities.App.Extensions;
@inherits DbContextAwareComponent

<MudTable Items="DraftReports" RowClass="cursor-pointer" Hover="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Reports</MudText>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Type</MudTh>
        <MudTh>Date Submitted</MudTh>
        <MudTh>Last Modified</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.Id</MudTd>
        <MudTd>@context.Type.GetReportTypeDisplayName()</MudTd>
        <MudTd>@context.DateSubmitted</MudTd>
        <MudTd>@context.DateLastModified</MudTd>
        <MudTd><MudButton Href="@($"/mortality-reports/{EnvClientId}/{context.Id}/editdraft")">Edit</MudButton></MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>