@using WildlifeMortalities.Shared.Services
<MudText Typo="Typo.h6">Authorizations</MudText>
<MudList>
</MudList>

@code {

    [Parameter]
    [EditorRequired]
    public int ClientId { get; set; }

    private AuthorizationsViewModel _authorizationsViewModel = null!;

    [Inject]
    private ClientService ClientService { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        _authorizationsViewModel = new AuthorizationsViewModel
        {
            Authorizations = await ClientService.GetAuthorizationsByClientId(ClientId)
        };
    }

}
