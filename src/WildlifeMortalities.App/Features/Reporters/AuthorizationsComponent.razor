@using WildlifeMortalities.Shared.Services.ClientLookup
@using WildlifeMortalities.Data.Entities.People
<MudText Typo="Typo.h6">Authorizations</MudText>
<MudList>
</MudList>

@code {

    [Parameter, EditorRequired]
    public int ClientId { get; set; }

    private AuthorizationsViewModel _authorizationsViewModel = null!;

    [Inject]
    private IClientLookupService ClientLookupService { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        _authorizationsViewModel = new AuthorizationsViewModel
        {
            Authorizations = await ClientLookupService.GetAuthorizationsByClientId(ClientId)
        };
    }

}
